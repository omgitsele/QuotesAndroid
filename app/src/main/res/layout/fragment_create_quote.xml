<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_relative_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <TextView
        android:id="@+id/daily_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text="@string/create_new_quote"
        android:textAlignment="center"
        android:textSize="24sp"
        android:layout_marginTop="20dp"
        android:visibility="visible"
        />


    <EditText
        android:id="@+id/edit_quote_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/edit_text_border"
        android:hint="@string/please_enter_a_new_quote"
        android:padding="4dp"
        android:textAlignment="center"
        android:layout_centerInParent="true"
        android:textColor="#949494"
        android:maxLength="1000"

        android:textSize="16sp"
        android:visibility="visible" />



    <EditText
        android:id="@+id/edit_author_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_quote_text"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/edit_text_border"
        android:hint="@string/please_enter_author_s_name_optional"
        android:padding="4dp"
        android:textAlignment="center"
        android:textColor="#949494"
        android:maxLength="400"
        android:textSize="16sp"
        android:visibility="visible" />

    <Button
        android:id="@+id/create_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:shadowColor="@color/black"
        android:text="@string/create"
        android:layout_below="@+id/edit_author_text"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp"
        />



</RelativeLayout>